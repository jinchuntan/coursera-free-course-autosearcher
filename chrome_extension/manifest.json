{
  "manifest_version": 3,
  "name": "Coursera Truly-Free Scanner",
  "version": "0.1.3",
  "description": "Scans the current Coursera page for truly-free course signals and opens matching course URLs.",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "host_permissions": ["https://www.coursera.org/*"],
  "action": {
    "default_title": "Coursera Truly-Free Scanner",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coursera.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
